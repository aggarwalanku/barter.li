<h2> Barter </h2>
<%= simple_form_for(@barter) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  <%= f.input :book_id, :as => :hidden, :input_html => {:value => @book_id} %> 
   <textarea name="message"></textarea>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>